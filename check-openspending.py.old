#!/usr/bin/env python

import argparse
import json
import os
import re
import requests
import subprocess
import sys

from jsondiff import diff
from pprint import pformat
from sendgrid.helpers.mail import *
from sendgrid import *

# Requirements: sudo pip install jsondiff

# This script assumes that it is placed in the '/home/projects/openspending-check'
# directory and also run from this directory. Add the following line to
# 'sudo crontab -e' to run it every day:
#0 0 * * * (cd /home/projects/openspending-check && sudo ./check-openspending.py)


parser = argparse.ArgumentParser(description='Checks for new CBS Iv3 updates every day, downloads them and updates openspending')

parser.add_argument('-t', '--today', action="store", dest="today_date")
parser.add_argument('-y', '--yesterday', action="store", dest="yesterday_date")
args = parser.parse_args()


def sendmail(subject, content, to=['sicco@openstate.eu']):
    mail = Mail()
    email = Email()
    email.email = "developers@openstate.eu"
    email.name = "Open State Foundation"
    mail.from_email = email
    mail.subject = subject

    personalization = Personalization()
    for address in to:
        personalization.add_to(Email(address))
    mail.add_personalization(personalization)

    mail.add_content(Content("text/plain", content))

    sg.client.mail.send.post(request_body=mail.get())

log_dir = 'daily-results'
cbs_iv3_catalog = 'https://dataderden.cbs.nl/ODatacatalog/Tables?$format=json'

s = requests.session()

result = s.get(cbs_iv3_catalog).json()

# Save only the items related to Iv3 data
all_items = {}
for item in result['value']:
    identifier = item['Identifier']
    if item['Catalog'] == 'IV3':
        all_items[identifier] = item

today_date = subprocess.check_output('date +%y-%m-%d', shell=True).strip()
if args.today_date:
    today_date = args.today_date
yesterday_date = subprocess.check_output('date --date="yesterday" +%y-%m-%d', shell=True).strip()
if args.yesterday_date:
    yesterday_date = args.yesterday_date

today_file = '%s/%s.json' % (log_dir, today_date)
yesterday_file = '%s/%s.json' % (log_dir, yesterday_date)

# Don't write to the today_file if we passed the today_date as an
# argument as this means that the file already exists
if not args.today_date:
    with open(today_file, 'w') as OUT:
        json.dump(all_items, OUT, indent=4, sort_keys=True)

try:
    with open(today_file) as IN:
        today = json.load(IN)
except:
    sendmail(
        '[Openspending Checker] Could not find today\'s test',
        'The automated daily check for openspending updates could not find today\'s test file \'%s\'' % (today_file)
    )
    exit()

try:
    with open(yesterday_file) as IN:
        yesterday = json.load(IN)
except:
    sendmail(
        '[Openspending Checker] Could not find yesterday\'s test',
        'The automated daily check for openspending updates could not find yesterday\'s test file \'%s\'' % (yesterday_file)
    )
    exit()

if not today:
    sendmail(
        '[Openspending Checker] Today\'s test is empty',
        'The automated daily check for openspending updates could not find results in today\'s test file \'%s\'' % (today_file)
    )
    exit()

if not yesterday:
    sendmail(
        '[Openspending Checker] Yesterday\'s test is empty',
        'The automated daily check for openspending updates could not find results in yesterday\'s test file \'%s\'' % (yesterday_file)
    )
    exit()

def mail_error(cmd):
    sendmail(
        '[Openspending Checker] Error when updating',
        'The automated daily check for openspending updates found changes but ran into an error when it tried to automatically update using the following command:\n\n%s\n\nCheck the log file for the actual error message.' % (cmd)
    )
    exit()

changes = diff(yesterday, today, syntax='symmetric')
if changes:
    sendmail(
        '[Openspending Checker] Found changes in CBS data',
        'The automated daily check for openspending updates detected the following changes in the test results compared to yesterday:\n\n%s' % (pformat(changes, indent=2))
    )

    for k, v in changes.items():
        if 'Waterschappen' in v['DefaultSelection'][0]:
            print 'Skipping %s because we don\'t do waterschappen at this moment' % k
            del changes[k]

    # Try to download the tables that contain changes
    for table in changes:
        r = requests.get('https://dataderden.cbs.nl/ODataAPI/OData/%s/' % table).json()
        endpoints = [x['name'] for x in r['value']]
        endpoints.remove('TypedDataSet')
        endpoints.remove('DataProperties')
        cmd = "sudo docker exec c-openspending bash -c 'source ../bin/activate && ./manage.py download_cbs_data --traceback -i %s" % (table)
        for endpoint in endpoints:
            cmd += " -t %s" % (endpoint)
        cmd += " >> log/download_cbs_data.log 2>&1'"
        if os.system(cmd) != 0:
            mail_error(cmd)
    # Try to run cbs2document
    for table in changes:
        cmd = "sudo docker exec c-openspending bash -c 'source ../bin/activate && ./manage.py cbs2document --traceback -i %s -t UntypedDataSet_orig >> log/cbs2document.log 2>&1'" % (table)
        if os.system(cmd) != 0:
            mail_error(cmd)
    # Try to run save_government_model
    for table in changes:
        cmd = "sudo docker exec c-openspending bash -c 'source ../bin/activate && ./manage.py save_government_model --traceback -i %s >> log/save_government_model.log 2>&1'" % (table)
        if os.system(cmd) != 0:
            mail_error(cmd)
    # Try to run import_cbs_data
    for table in changes:
        cmd = "sudo docker exec c-openspending bash -c 'source ../bin/activate && ./manage.py import_cbs_data --traceback -i %s -t UntypedDataSet -p 6 >> log/import_cbs_data.log 2>&1'" % (table)
        if os.system(cmd) != 0:
            mail_error(cmd)
    # Try to run download_metrics
    for table in changes:
        cmd = "sudo docker exec c-openspending bash -c 'source ../bin/activate && ./manage.py download_metrics --traceback -a >> log/download_metrics.log 2>&1'"
        if os.system(cmd) != 0:
            mail_error(cmd)

    # If we reach this point then all updates should have been
    # successful
    sendmail(
        '[Openspending Checker] Successfully updated',
        'All updates have been successfully processed'
    )
